{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quickies",
  "version": "0.1.0",
  "identifier": "org.thinkerapp.quickies",
  "plugins": {
    "deep-link":{
      "desktop": {
        "schemes": ["quickies"]
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "menubar",
        "width": 350,
        "height": 400,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
